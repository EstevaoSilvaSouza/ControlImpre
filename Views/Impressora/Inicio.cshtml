@model IEnumerable<Control_Impressora.Models.Impressora>

@{
    ViewData["Title"] = "Inicio";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Lista de impressoras</h4>
            <p class="card-description">
                Adicione <code>.nova./impressora</code>
                <a class="btn btn btn-primary" asp-action="Cadastro">ADICIONAR</a>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Marca)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Modelo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.VersaoDrive)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Mac)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IpImpre)
                            </th>
                            <th>
                                TEstoque
                            </th>
                            <th>
                                TEstoque Uso
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Empresa.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Endereco.Base)
                            </th>


                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Marca)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Modelo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VersaoDrive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mac)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IpImpre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QtdEstoqueToner)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QtdEstoqueUsoToner)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Empresa.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Endereco.Base)
                                </td>

                                <td>
                                    <a class="btn btn-dark btn-icon-text" 
                                       asp-action="Arquivos" 
                                       asp-route-id="@item.Id">Arquivos</a>
                                    <a class="btn btn-dark btn-icon-text"                         
                                       asp-controller="DadosImpre"
                                       asp-action="DateImpressora" 
                                       asp-route-id="@item.Id">Dados</a>
                                    <a class="btn btn-success btn-icon-text" 
                                       asp-action="Detalhes"
                                       asp-route-id="@item.Id">Detalhes</a>
                                    <a class="btn btn-info btn-icon-text" 
                                       asp-action="Editar" 
                                       asp-route-id="@item.Id">Editar</a>
                                    <a class="btn btn-danger btn-icon-text"
                                       asp-action="Deletar"
                                       asp-route-id="@item.Id">Remover</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>










