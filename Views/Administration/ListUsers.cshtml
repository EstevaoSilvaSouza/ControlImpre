@model IEnumerable<ApplicationUser>

@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


@{
    ViewData["Title"] = "ListUsers";
}

<div class="card-header">
    <h3 class="card-title">Usuarios Cadastrados</h3>
</div>
@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="Register"
       asp-controller="Account">Novo Usuário</a>


    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Lista de impressoras</h4>
                <p class="card-description">
                    Adicione <code>.nova./impressora</code>
                    <a class="btn btn btn-primary" asp-action="Cadastro">ADICIONAR</a>
                </p>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Usuario</th>
                                <th>Nome</th>
                                <th>Cpf</th>
                                <th>Rg</th>
                                <th>Cargo</th>
                                <th>Matricula</th>
                                <th>Cidade</th>
                                <th>Rua</th>
                                <th>Numero</th>
                                <th>Logradouro</th>
                                <th>Bairro</th>
                                <th>Estado</th>
                                <th>Base</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {

                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.Email</td>
                                    <td>@user.Nome</td>
                                    <td>@user.Cpf</td>
                                    <td>@user.Rg</td>
                                    <td>@user.Cargo</td>
                                    <td>@user.Matricula</td>
                                    <td>@user.Endereco.Cidade</td>
                                    <td>@user.Endereco.Rua</td>
                                    <td>@user.Endereco.Numero</td>
                                    <td>@user.Endereco.Logradouro</td>
                                    <td>@user.Endereco.Bairro</td>
                                    <td>@user.Endereco.Estado</td>
                                    <td>@user.Endereco.Base</td>
                                    <td>
                                        <a asp-action="EditUser" asp-controller="Administration"
                                           asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                                    </td>
                                    <td>

                                        <form method="post" asp-action="DeleteRole" asp-route-id="@user.Id">


                                            <span id="confirmaDeleteSpan_@user.Id" style="display:none">
                                                <span>Confirma a exclusão desta role ?</span>
                                                <button type="submit" class="btn btn-danger">Sim</button>
                                                <a href="#" class="btn btn-primary"
                                                   onclick="confirmaDelete('@user.Id', false)">Não</a>
                                            </span>
                                            <span id="deleteSpan_@user.Id">
                                                <a href="#" class="btn btn-danger"
                                                   onclick="confirmaDelete('@user.Id', true)">Deletar</a>
                                            </span>
                                        </form>
                                    </td>

                                </tr>

                            }

                        </tbody>

                    </table>
                    </div>
                </div>
            </div>
        </div>
        


                    }
                    else
                    {
                    <div class="card">
                        <div class="card-header">
                            Usuarios sem Registro
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                Use o botão abaixo para criar novo usuário
                            </h5>
                            <a class="btn btn-primary" style="width:auto"
                               asp-controller="Account" asp-action="Register">
                                Criar novo usuário
                            </a>
                        </div>
                    </div>
                    }

